DIR=${1}
if [ ! -d ${DIR} ]; then
  exit 1
fi

FILE_COUNT=`find "${DIR}" -name "*.md" | wc -l | awk '{print $1}'`
if [ "$FILE_COUNT" == "0" ]; then
  exit 1
fi

exit 0
